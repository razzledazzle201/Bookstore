@page

@model Bookstore.Pages.PurchaseModel

@{
}

<h2 class="text-center">Your Cart</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Book</th>
            <th>Quantity</th>
            <th class="text-right">Price</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Cart.LineItems)
        {
            <tr>
                <td class="text-left">@item.Book.BookTitle</td>
                <td class="text-center">@item.Quantity</td>
                <td class="text-right">@item.Book.BookPrice</td>
                <td class="text-right">@((item.Book.BookPrice * item.Quantity).ToString("c"))</td>
                <td class="text-center">
                    <form asp-page-handler="Remove" method="post">
                        <input type="hidden" name="BookId"
                               value="@item.Book.BookId" />
                        <input type="hidden" name="returnUrl"
                               value="@Model.ReturnUrl" />
                        <button type="submit" class="btn btn-sm btn-danger">
                            Remove
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-right"><strong>Total:</strong></td>
            <td class="text-right"><strong>@Model.Cart.ComputeTotalSum().ToString("c")</strong></td>
        </tr>
    </tfoot>
</table>

<div class="text-center">
    <a class="btn btn-primary" href="@Model.ReturnUrl">Continue Shopping</a>
</div>