@*
    Partial view for books
*@
@model BookModel

<div class="p-1">
    <div class="card text-white bg-secondary">
        <div class="card-header">
            <h5 class="card-title">Book #@Model.BookId: @Model.BookTitle</h5>
            <h6 class="card-subtitle mb-2 ">By @Model.BookAuthorFirstName @Model.BookAuthorMiddleName @Model.BookAuthorLastName</h6>
        </div>
        <div class="card-body">

            <p class="card-text"><strong class="font-weight-bold">Price:</strong> @Model.BookPrice.ToString("c")</p>
            <p class="card-text"><strong class="font-weight-bold">Publisher:</strong> @Model.BookPublisher</p>
            <p class="card-text"><strong class="font-weight-bold">ISBN:</strong> @Model.BookISBN</p>
            <p class="card-text"><strong class="font-weight-bold">Category:</strong> @Model.BookCategory</p>
            <p class="card-text"><strong class="font-weight-bold">Genre:</strong> @Model.BookClassification</p>
            <p class="card-text"><strong class="font-weight-bold">Pages:</strong>  @Model.BookPages</p>

        </div>
        <form id="@Model.BookId" asp-page="/Purchase" method="post">
            <input type="hidden" asp-for="BookId" />
            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
            <span class="card-text p-1">
                @Model.BookTitle
                <button type="submit" class="btn-success btn-sm pull-right" style="float:right">Purchase</button>
            </span>
        </form>
    </div>
</div>